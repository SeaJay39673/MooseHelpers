#!/bin/bash
win=0
window="--width=600 --height=450"
while getopts ':w' OPTION; do
	case "$OPTION" in
		w)
			win=1
		;;
	esac
done
shift "$(($OPTIND -1))"

echo "Watching Following Command: $@"
if $@ ; then
	type="--info"
	output="--text=\"$1 Command terminated successfully\""
else
	type="--error"
	output="--text=\"$1 Command execution failed\""
fi

echo -e "\a"
if [ "$win" -eq "1" ]; then
	eval "zenity $type $window $output"
fi
